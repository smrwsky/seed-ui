{
  "presets": [
    "@babel/preset-typescript",
    [
      "@babel/preset-env",
      {
        "bugfixes": true,
        "modules": false,
        "targets": ">0.25%"
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-transform-runtime",
    "@vanilla-extract/babel-plugin",
    "lodash"
  ],
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    }
  }
}
