{
  "presets": ["@babel/preset-typescript"],
  "plugins": [
    "lodash",
    "@babel/plugin-transform-runtime",
    "@vanilla-extract/babel-plugin"
  ],
  "env": {
    "cjs": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "bugfixes": true,
            "modules": "cjs",
            "targets": ">0.25%"
          }
        ]
      ]
    },
    "es": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "bugfixes": true,
            "modules": false,
            "targets": ">0.25%"
          }
        ]
      ]
    },
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    }
  }
}
