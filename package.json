{
  "name": "seed-ui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs": "start-storybook -p 6006 -s .storybook/public --no-manager-cache",
    "build": "yarn build:styles && yarn build:layout && yarn build:elements",
    "build:elements": "lerna run --scope @seed-ui/elements --stream build",
    "build:icons": "lerna run --scope @seed-ui/icons --stream build",
    "build:layout": "lerna run --scope @seed-ui/layout --stream build",
    "build:styles": "lerna run --scope @seed-ui/styles --stream build",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "lint": "lerna run --stream lint:quiet",
    "format": "yarn format:ts && yarn format:js && yarn format:json && yarn format:yaml",
    "format:ts": "prettier --parser typescript --write \"/*.{ts,tsx}\" --loglevel error",
    "format:js": "prettier --write \"/*.js\"  --loglevel error",
    "format:json": "prettier --parser json --write \"/*.{json,prettierrc}\" --loglevel error",
    "format:yaml": "prettier --parser yaml --write \"/*.{yml,yaml}\" --loglevel error",
    "lint:ci": "yarn lint --format github",
    "precommit": "lerna run --stream --concurrency 1 precommit --since HEAD --exclude-dependents",
    "prepare": "husky install",
    "release": "changeset publish",
    "test": "jest --config jest.config.js --passWithNoTests",
    "test:ci": "mkdir -p __reports__ && yarn test --json --outputFile=__reports__/jest-results.json --ci --coverage --runInBand",
    "test:watch": "yarn test --watch",
    "typecheck": "lerna run --stream --concurrency 1 typecheck"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-backgrounds": "^6.2.9",
    "@storybook/addon-controls": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-storysource": "^6.2.9",
    "@storybook/addon-viewport": "^6.2.9",
    "@storybook/addons": "^6.3.9",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.3.9",
    "@svgr/webpack": "^5.5.0",
    "@vanilla-extract/babel-plugin": "^1.1.1",
    "@vanilla-extract/webpack-plugin": "^2.1.0",
    "babel-jest": "^26.6.3",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "lerna": "^3.22.1",
    "license-checker": "^25.0.1",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "storybook-addon-performance": "^0.15.2",
    "storybook-addon-themes": "^6.1.0",
    "ts-jest": "^27.0.3",
    "typescript": "4.2.2"
  }
}
