{
  "name": "seed-ui",
  "private": true,
  "engines": {
    "node": ">=16.x"
  },
  "workspaces": ["packages/*"],
  "scripts": {
    "docs": "storybook dev -p 6006",
    "build": "yarn build:styles && yarn build:icons && yarn build:elements && yarn build:flexbox && yarn build:menu",
    "build:styles": "lerna run --scope @seed-ui/styles --stream build",
    "build:icons": "lerna run --scope @seed-ui/icons --stream build",
    "build:menu": "lerna run --scope @seed-ui/menu --stream build",
    "build:flexbox": "lerna run --scope @seed-ui/flexbox --stream build",
    "build:elements": "lerna run --scope @seed-ui/elements --stream build",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "format": "yarn format:ts && yarn format:js && yarn format:json && yarn format:yaml",
    "format:ts": "prettier --parser typescript --write \"**/*.{ts,tsx}\" --loglevel error",
    "format:js": "prettier --write \"**/*.js\"  --loglevel error",
    "format:json": "prettier --parser json --write \"**/*.{json,prettierrc}\" --loglevel error",
    "format:yaml": "prettier --parser yaml --write \"**/*.{yml,yaml}\" --loglevel error",
    "lint": "eslint . --cache",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "release": "changeset publish",
    "test": "jest --config jest.config.mjs --passWithNoTests",
    "test:ci": "mkdir -p __reports__ && yarn test --json --outputFile=__reports__/jest-results.json --ci --coverage --runInBand",
    "test:watch": "yarn test --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@justoss/code-style": "^0.0.5",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-a11y": "7.0.0-beta.64",
    "@storybook/addon-essentials": "7.0.0-beta.64",
    "@storybook/addon-mdx-gfm": "7.0.0-beta.64",
    "@storybook/addon-storysource": "7.0.0-beta.64",
    "@storybook/addons": "7.0.0-beta.64",
    "@storybook/react-vite": "7.0.0-beta.64",
    "@storybook/theming": "7.0.0-beta.64",
    "@swc/core": "^1.3.40",
    "@swc/jest": "^0.2.24",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.5.1",
    "@types/jest-axe": "^3.5.4",
    "@types/node": "^14.11.2",
    "@vanilla-extract/css": "^1.10.0",
    "@vanilla-extract/jest-transform": "^1.1.1",
    "@vanilla-extract/rollup-plugin": "^1.2.0",
    "@vanilla-extract/vite-plugin": "^3.8.0",
    "boxicons": "^2.1.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "eslint": "^8.35.0",
    "glob": "^9.3.2",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-axe": "^6.0.0",
    "lerna": "^6.4.1",
    "license-checker": "^25.0.1",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "postcss": "^8.4.21",
    "prettier": "^2.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "7.0.0-beta.64",
    "typescript": "4.7.4",
    "vite": "^4.2.0"
  }
}
